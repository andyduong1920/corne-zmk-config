#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    macros {
        file_change_vscode: file_change_vscode {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(LS(S)) &kp LC(LS(Z))>;
            label = "FILE_CHANGE_VSCODE";
        };

        git_status: git_status {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(LS(GRAVE)) &kp G &kp S &kp T &kp ENTER>;
            label = "GIT_STATUS";
        };

        git_push: git_push {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(LS(GRAVE)) &kp G &kp G &kp P &kp U &kp S &kp H &kp ENTER>;
            label = "GIT_PUSH";
        };
    };

    combos {
        compatible = "zmk,combos";

        // Utils

        bootloader {
            bindings = <&bootloader>;
            key-positions = <29 4>;
            layers = <1>;
            timeout-ms = <50>;
            slow-release;
        };

        bluetooth_reset {
            bindings = <&bt BT_CLR>;
            key-positions = <29 3>;
            timeout-ms = <50>;
            slow-release;
            layers = <1>;
        };

        // Common

        show_all_app {
            bindings = <&kp LC(UP_ARROW)>;
            key-positions = <16 15>;
            layers = <1 0>;
            timeout-ms = <50>;
        };

        show_all_window {
            bindings = <&kp LC(DOWN_ARROW)>;
            key-positions = <14 15>;
            layers = <1 0>;
            timeout-ms = <50>;
        };

        search-all-vs-code {
            bindings = <&kp LG(LS(F))>;
            key-positions = <16 28>;
            layers = <1 0>;
            timeout-ms = <20>;
        };

        esc {
            bindings = <&kp ESC>;
            key-positions = <1 2>;
            timeout-ms = <20>;
            slow-release;
            layers = <0 1>;
        };

        lock {
            bindings = <&kp LG(L)>;
            key-positions = <25 26>;
            timeout-ms = <20>;
            slow-release;
            layers = <0 1>;
        };

        // With 36 position
        /// Layer switch

        to-layer-mouse {
            bindings = <&to 1>;
            key-positions = <36 25>;
            layers = <0>;
        };

        to_base_layout {
            bindings = <&to 0>;
            key-positions = <36 25>;
            layers = <1 2 3>;
        };

        /// Key for alpha numeric layer

        tab {
            bindings = <&kp TAB>;
            key-positions = <36 5>;
            layers = <0>;
        };

        capsLock {
            bindings = <&kp CLCK>;
            key-positions = <27 12>;
            timeout-ms = <50>;
            layers = <0>;
        };

        // With 37 position

        quit_app {
            bindings = <&kp LG(Q)>;
            key-positions = <37 1>;
            timeout-ms = <50>;
            slow-release;
            layers = <0 1>;
        };

        close_window {
            bindings = <&andy_press_hold_or_tap LG(LS(W)) LG(W)>;
            key-positions = <37 2>;
            timeout-ms = <500>;
            slow-release;
            layers = <0 1>;
        };

        refresh {
            bindings = <&kp LG(R)>;
            key-positions = <37 4>;
            timeout-ms = <50>;
            slow-release;
            layers = <0 1>;
        };

        select_all {
            bindings = <&kp LG(A)>;
            key-positions = <37 13>;
            timeout-ms = <50>;
            slow-release;
            layers = <0 1>;
        };

        save {
            bindings = <&kp LG(S)>;
            key-positions = <37 14>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        undo {
            bindings = <&kp LG(Z)>;
            key-positions = <37 25>;
            timeout-ms = <50>;
            slow-release;
            layers = <0 1>;
        };

        search {
            bindings = <&kp LG(F)>;
            key-positions = <37 16>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        copy {
            bindings = <&andy_press_hold_or_tap LG(LS(C)) LG(C)>;
            key-positions = <37 27>;
            timeout-ms = <500>;
            slow-release;
            layers = <0 1>;
        };

        paste {
            bindings = <&kp LG(V)>;
            key-positions = <37 28>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        home {
            bindings = <&andy_press_hold_or_tap HOME UP_ARROW>;
            key-positions = <37 5>;
            timeout-ms = <500>;
            slow-release;
            layers = <0 1>;
        };

        end {
            bindings = <&andy_press_hold_or_tap END DOWN_ARROW>;
            key-positions = <37 17>;
            timeout-ms = <500>;
            slow-release;
            layers = <0 1>;
        };

        back_and_forward {
            bindings = <&andy_press_hold_or_tap LG(RIGHT_BRACKET) LG(LEFT_BRACKET)>;
            key-positions = <37 29>;
            timeout-ms = <500>;
            slow-release;
            layers = <0 1>;
        };

        recently_vs_code {
            bindings = <&kp LA(NUMBER_6)>;
            key-positions = <36 4>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        clipboard_history {
            bindings = <&kp LA(NUMBER_5)>;
            key-positions = <36 28>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        slack {
            bindings = <&kp LA(NUMBER_4)>;
            key-positions = <14 12>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        vscode {
            bindings = <&kp LA(NUMBER_1)>;
            key-positions = <12 15>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        browser {
            bindings = <&kp LA(NUMBER_2)>;
            key-positions = <12 13>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        vscode_changes {
            bindings = <&file_change_vscode>;
            key-positions = <27 28>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        delete {
            bindings = <&andy_press_hold_or_tap LG(BACKSPACE) BACKSPACE>;
            key-positions = <36 37>;
            timeout-ms = <500>;
            layers = <0 1>;
        };

        enter {
            bindings = <&kp ENTER>;
            key-positions = <37 38>;
            timeout-ms = <50>;
            layers = <0 1>;
        };

        left_PARENTHESIS {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <3 4>;
            timeout-ms = <50>;
            layers = <3>;
        };

        right_PARENTHESIS {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <4 5>;
            timeout-ms = <50>;
            layers = <3>;
        };

        left_BRACKET {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <15 16>;
            timeout-ms = <50>;
            layers = <3>;
        };

        right_BRACKET {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <16 17>;
            timeout-ms = <50>;
            layers = <3>;
        };

        left_BRACE {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <27 28>;
            timeout-ms = <50>;
            layers = <3>;
        };

        right_BRACE {
            bindings = <&kp RIGHT_BRACE>;
            key-positions = <28 29>;
            timeout-ms = <50>;
            layers = <3>;
        };

        to-layer-number {
            bindings = <&to 2>;
            key-positions = <36 26>;
            layers = <0 1 3>;
        };
    };

    behaviors {
        andy_press_hold_or_tap: andy_press_hold_or_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "ANDY_PRESS_HOLD_OR_TAP";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <350>;
        };
    };

    behaviors {
        andy_mouse_tap_or_hold_layer: andy_mouse_tap_or_hold_layer {
            compatible = "zmk,behavior-hold-tap";
            label = "ANDY_MOUSE_TAP_OR_HOLD_LAYER";
            bindings = <&mo>, <&mkp>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <170>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
&none  &kp Q                                 &kp W                                   &kp E                               &kp R                               &kp T        &kp Y    &kp U                                            &kp I                               &kp O                                   &kp P                                    &none
&none  &andy_press_hold_or_tap LEFT_SHIFT A  &andy_press_hold_or_tap LEFT_CONTROL S  &andy_press_hold_or_tap LEFT_ALT D  &andy_press_hold_or_tap LEFT_GUI F  &kp G        &kp H    &andy_press_hold_or_tap LEFT_GUI J               &andy_press_hold_or_tap LEFT_ALT K  &andy_press_hold_or_tap LEFT_CONTROL L  &andy_press_hold_or_tap LEFT_SHIFT SEMI  &none
&none  &kp Z                                 &kp X                                   &kp C                               &kp V                               &kp B        &kp N    &kp M                                            &kp COMMA                           &kp DOT                                 &kp FSLH                                 &none
                                                                                     &mo 2                               &none                               &kp SPACE    &kp RET  &andy_press_hold_or_tap LG(BACKSPACE) BACKSPACE  &none
            >;

            label = "base";
        };

        mouse {
            bindings = <
&trans  &trans  &trans  &trans                                &trans  &trans       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans                                &trans  &trans       &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans                                &trans  &trans       &trans  &trans  &trans  &trans  &trans  &trans
                        &andy_mouse_tap_or_hold_layer 2 RCLK  &none   &mkp LCLK    &trans  &trans  &trans
            >;

            label = "mouse";
        };

        number {
            bindings = <
&trans  &kp KP_N7  &kp KP_N8  &kp KP_N9  &kp KP_NUMBER_0  &kp UP_ARROW      &trans  &trans  &trans  &trans  &trans  &trans
&none   &kp KP_N4  &kp KP_N5  &kp KP_N6  &kp UNDERSCORE   &kp DOWN_ARROW    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp KP_N1  &kp KP_N2  &kp KP_N3  &kp LEFT_ARROW   &kp RIGHT         &trans  &trans  &trans  &trans  &trans  &trans
                              &trans     &tog 3           &trans            &trans  &trans  &trans
            >;

            label = "number";
        };

        symbol {
            bindings = <
&trans  &kp AMPERSAND    &kp PLUS     &kp MINUS  &kp ASTERISK    &kp SLASH    &trans  &trans  &trans  &trans  &trans  &trans
&none   &kp DOLLAR       &kp PERCENT  &kp CARET  &kp UNDERSCORE  &kp EQUAL    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp EXCLAMATION  &kp AT_SIGN  &kp HASH   &kp BSLH        &kp PIPE     &trans  &trans  &trans  &trans  &trans  &trans
                                      &none      &tog 3          &trans       &trans  &trans  &trans
            >;

            label = "symbol";
        };
    };
};
